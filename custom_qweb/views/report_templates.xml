<odoo>
    <template id="custom_account_move_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="invoice" style="font-family: Arial, sans-serif; padding: 20px; width: 210mm; height: 297mm; margin: auto; border: 1px solid #ddd; box-sizing: border-box;">
                    <!-- Header Section -->
                    <div class="header" style="display: flex; justify-content: space-between; align-items: flex-start; border-bottom: 2px solid #000; padding-bottom: 10px;">
                        <div style="flex: 1;">
                            <p style="margin: 0; font-size: 35px; font-weight: bold;">INVOICE</p>
                            <p style="margin: 5px 0;"><strong>Customer Name:</strong> <t t-esc="doc.partner_id.name"/></p>
                            <p style="margin: 5px 0;">Street Address Line 1</p>
                            <p style="margin: 5px 0;">Street Address Line 2</p>
                            <p style="margin: 5px 0;">City, State, ZIP</p>
                        </div>
                        <div style="text-align: left; ">
                            <p style="margin: 0; font-size: 28px; font-weight: bold;">Invoice Details</p>
                            <p style="margin: 5px 0;"><strong>Invoice Number:</strong> <t t-esc="doc.name"/></p>
                            <p style="margin: 5px 0;"><strong>Date:</strong> <t t-esc="doc.invoice_date"/></p>
                            <p style="margin: 5px 0;"><strong>Due Date:</strong> <t t-esc="doc.invoice_date_due"/></p>
                        </div>
                    </div>

                    <!-- Invoice Lines Section -->
                    <div class="lines" style="margin-top: 20px;">
                        <table style="width: 100%; border-collapse: collapse; table-layout: fixed;">
                            <thead>
                                <tr style="background-color: #f5f5f5; text-align: left;">
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd; width: 30%;">Item</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd; width: 38%;">Description</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right; width: 12%;">Quantity</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right; width: 10%;">Price</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right; width: 10%;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd; word-wrap: break-word;"><t t-esc="line.name"/></td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd; word-wrap: break-word;"><t t-esc="line.product_id.display_name"/></td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right;"><t t-esc="line.quantity"/></td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right;">
                                            <t t-esc="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: right;">
                                            <t t-esc="line.price_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary Section -->
                    <div class="summary" style="display: flex; justify-content: flex-end; margin-top: 20px;">
                        <table style="border-collapse: collapse; width: 50%;">
                            <tr>
                                <td style="padding: 10px; text-align: right; font-weight: bold;">Subtotal:</td>
                                <td style="padding: 10px; text-align: right;">
                                    <t t-esc="doc.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; text-align: right; font-weight: bold;">Discount:</td>
                                <td style="padding: 10px; text-align: right;">
                                    <t t-esc="sum(line.price_unit * line.quantity * (line.discount / 100) for line in doc.invoice_line_ids)"
                                       t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; text-align: right; font-weight: bold;">Tax:</td>
                                <td style="padding: 10px; text-align: right;">
                                    <t t-esc="doc.amount_tax" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <td style="padding: 10px; text-align: right; font-weight: bold;">Total:</td>
                                <td style="padding: 10px; text-align: right; font-weight: bold;">
                                    <t t-esc="doc.amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
