<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Form View -->
    <record id="view_order_form_inherit_delivery" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@class='oe_title']" position="after">
                <group>
                    <field name="delivery_type"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Sale Order Tree View -->
    <record id="view_order_tree_inherit_delivery" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_type" optional="show"/>
            </xpath>
        </field>
    </record>

