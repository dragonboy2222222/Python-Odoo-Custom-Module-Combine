<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the account move form view to add the delivery_type field -->
        <record id="view_invoice_form_inherit_delivery_type" model="ir.ui.view">
            <field name="name">account.move.form.inherit.delivery.type</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Insert the delivery_type field after the partner_id field -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>