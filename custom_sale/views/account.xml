<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_customer" model="ir.ui.view">
        <field name="name">account.move.form.inherit.customer</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add the Customer Name (customer_id) field in the invoice form, after the partner_id field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="customer_id"/>
            </xpath>
        </field>
    </record>
</odoo>