<!-- sale_fixed_discount/views/sale_order_views.xml -->
<odoo>
    <!-- Sales Order Line -->
    <record id="view_order_form_inherit_fixed_discount" model="ir.ui.view">
        <field name="name">sale.order.line.form.fixed.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="after">
                <field name="fixed_discount"  options="{'precision': 2}"/>
            </xpath>
        </field>
    </record>






<!--     Invoice Line -->
    <record id="view_invoice_form_inherit_fixed_discount" model="ir.ui.view">
        <field name="name">account.move.line.form.fixed.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                <field name="fixed_discount" widget="float" options="{'precision': 2}"/>
            </xpath>
        </field>
    </record>
</odoo>
